# NPM configuration for Legal Case Tracker
# Forces resolution of known problematic dependencies

# Ensure Rollup doesn't use native modules
ROLLUP_NATIVE_DISABLE=1

# Increase timeout for slow connections
timeout=120000

# Ensure MUI icons are all available, even when capitalization issues occur
public-hoist-pattern[]=@mui/icons-material

# Increase network retry attempts
fetch-retries=5
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000

# Set Vercel compatibility flags
legacy-peer-deps=true
fund=false
